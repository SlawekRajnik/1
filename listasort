# lista wyniki

import pickle, shelve

scores = []

print("dotychczasowa lista:")

f = open("pikle1.dat", "ab")

scores = pickle.load(f)

print(scores)

input("przejdź dalej")

choice = None

while choice != "0":

    print(
        """
         Najwyniki

         0-zakończ
         1-pokaż wyniki
         2-dodaj wyniki
         3-usuń wyniki
         """
        )
    choice = input("wybiera: ")
    print()

    if choice == "0":
        print("Do widzenia")
    elif choice == "1":
        print("najwyniki")
        for entry in scores:
            score, imię = entry
            print(imię, score)
    elif choice == "2":
        imię = input("imię: ")
        score = int(input("jaki wynik uzyskałeś: "))
        entry = (score, imię)
        scores.append(entry)
        scores.sort(reverse=True)
        scores = scores[:3]
    elif choice == "3":
        score = int(input("który wynik usunąć: "))
        if score in scores:
            scores.remove(score)
        else:
            print(score, "nie ma na liście")
    elif choice == "4":
        scores.sort(reverse=False)
    else:
        print("niestety", choice, "to jest zły wybór")

f = open("pikle1.dat", "wb")

pickle.dump(scores, f)
f.close()

print(scores)

input("koniec")
            
            


input("koniec")
